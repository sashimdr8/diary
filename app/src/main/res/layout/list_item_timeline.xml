<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small">



            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/btFav"
                android:layout_toStartOf="@id/btFav"
                android:paddingRight="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:textSize="@dimen/textSizeMedium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btFav"
                android:layout_width="@dimen/emoji_size_small"
                android:layout_height="@dimen/emoji_size_small"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_favourite" />


            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                 />
            <ImageView
                android:id="@+id/icEmoji"
                android:layout_below="@id/tvTime"
                android:layout_marginTop= "@dimen/padding_ex_small"
                android:layout_width="@dimen/emoji_size_small"
                android:layout_height="@dimen/emoji_size_small" />

            <TextView
                android:id="@+id/tvFeelings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTime"
                android:textSize="@dimen/textSize"
                android:paddingLeft="@dimen/padding_ex_small"
                android:paddingTop="@dimen/padding_ex_small"
                android:layout_toRightOf="@id/icEmoji"
                android:layout_toEndOf="@id/icEmoji"
                />
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_small"
                android:layout_below="@id/icEmoji" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_below="@id/tvContent"
                android:visibility="gone"
                android:layout_marginTop="@dimen/padding_small" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>
